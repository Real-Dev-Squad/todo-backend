{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Docker: Build and Run Debug",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "-f",
                "docker-compose.debug.yml",
                "up",
                "--build",
                "--remove-orphans"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".*Creating.*",
                        "endsPattern": ".*Debug server listening on port 5678.*"
                    }
                }
            ]
        },
        {
            "label": "Docker: Stop Debug",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "-f",
                "docker-compose.debug.yml",
                "down"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Docker: Rebuild Debug",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "-f",
                "docker-compose.debug.yml",
                "build",
                "--no-cache",
                "django-app"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
